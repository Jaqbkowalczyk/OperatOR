MyBoxLayout:
    orientation: 'vertical'
    size: root.width, root.height
    MDToolbar:
        title: "Top Navbar"
        md_bg_color: .2,.2,.2,1
        specific_text_color: 1,1,1,1


    MDBottomNavigation:
        #color stuff
        #panel_color: 0,0,1,1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: "Dane"
            icon: 'database'
            GridLayout:
                cols: 2
                Label:
                    text: "KERG"
                    font_size: "20"
                    height: 40
                    size_hint_y: None
                TextInput:
                    id: kerg_input
                    text: ""
                    multiline: False
                    halign: "right"
                    font_size: 25
                    height: 40
                    size_hint_y: None
                    on_text_validate: root.on_enter(self.text)
                Label:
                    text: "Działki"
                    font_size: "20"
                GridLayout:
                    cols: 2
                    Label:
                        text: "Działka 1"
                    CheckBox:
                        on_active: root.checkbox_click(self, self.active)
                    Label:
                        text: "Działka 2"
                    CheckBox:
                        on_active: root.checkbox_click(self, self.active)


        MDBottomNavigationItem:
            name: 'screen 2'
            text: "Dokumenty"
            icon: 'file-document'

            MDLabel:
                text: "Codemy YouTube Channel Rocks!"
                halign: 'center'


        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Składanie Operatu"
            icon: 'send'

            MDLabel:
                text: "My Instagram:\nrealjohnelder"
                halign: 'center'